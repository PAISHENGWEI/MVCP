@model MVCProject.Models.Guestbooks

@{
    ViewBag.Title = "回覆留言";
}




@using (Html.BeginForm())
{
    <h3>回復留言</h3>
    <table>

        <tr>
            <td>
                @Html.LabelFor(model => model.Name)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.Contents)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Contents)
                @Html.ValidationMessageFor(model => model.Contents)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Reply)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Reply)
                @Html.ValidationMessageFor(model => model.Reply)
            </td>
        </tr>
    </table>
    if (Model.ReplyTime == null)
    {
        <input type="submit" value="回覆留言" />
    }
    else
    {
        <h5>此留言已回復，請</h5>
        @Html.ActionLink("返回列表", "Index")
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
