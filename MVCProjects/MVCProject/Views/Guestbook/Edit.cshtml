@model MVCProject.Models.Guestbooks

@{
    ViewBag.Title = "修改留言";
}

@using (Html.BeginForm())
{
    <h3>修改留言</h3>
    <table>

        <tr>
            <td>
                @Html.LabelFor(model => model.Acount)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Acount)
                @Html.ValidationMessageFor(model => model.Acount)
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.Contents)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Contents)
                @Html.ValidationMessageFor(model => model.Contents)
            </td>
        </tr>
    </table>
    if (Model.ReplyTime == null)
    {
        <input type="submit" value="修改留言" />
    }
    else
    {
        <h5>此留言已回復無法修改，請</h5>
        @Html.ActionLink("返回列表", "Index")
    }

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
